[init]
  templatedir = ~/.git_template

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[alias]
  au = add -u
  br = branch
  ci = commit
  co = checkout
  ctags=!.git/hooks/ctags
  dc = diff --cached
  df = diff
  latest=for-each-ref --sort=-taggerdate --format='%(refname:short)' --count=1
  lg = log -p
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  p = push
  pr = pull --rebase
  st = status

[push]
  default = upstream

[url "git@github.com:Polyconseil/"]
  insteadOf = poly:

[merge]
  tool = meld
